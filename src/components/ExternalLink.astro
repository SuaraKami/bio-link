---
import { Icon } from 'astro-icon/components'

interface Props {
  title: string
  href: string
  icon?: string
  index: number
}

const { title, href, index, icon = 'lucide:external-link' } = Astro.props
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    `group block border-b border-border py-6 transition-colors`,
    'duration-300',
    'hover:border-accent',
    'md:py-8',
    { 'border-y': index === 0 },
    { 'md:ml-[10vw]': index % 2 === 1 },
  ]}
>
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4 md:gap-6">
      <Icon name={icon} class="h-5 w-5 md:h-6 md:w-6" stroke-width={1.5} />
      <span class="text-2xl font-light tracking-tight uppercase md:text-3xl lg:text-4xl">
        {title}
      </span>
    </div>
    <span class="font-mono text-xs tracking-wider opacity-40 md:text-sm">
      {String(index + 2).padStart(2, '0')}
    </span>
  </div>
</a>
